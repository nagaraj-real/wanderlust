@model TravellersChoice.Models.Place

<h4>@Html.DisplayFor(model => model.PlaceDescription)</h4>
<form class="form-horizontal form-place">
    <div class="form-group">
        <label class="form-control-static">State : @Model.PlaceState</label>
        <label class="form-control-static">Country : @Model.PlaceCountry</label>
    </div>
    <div class="form-group">
        <label class="form-control-static">Average Rating : </label>
        @{
            for (int i = 1; i <= @Model.PlaceAvgRating; i++)
            {
                <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
            }
            for (int i = @Model.PlaceAvgRating + 1; i <= 5; i++)
            {
                <span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span>
            }

        }
    </div>
    <div class="form-group">
        <a href="#" id="reviewslideslink" onclick="return reviewslideslinkclick();"><span>Reviews</span> <span class="badge">@Model.Reviews.Count</span></a>
        <a href="#" id="imageslideslink" onclick="return imageslideslinkclick();"><span>Photos</span> <span class="badge">@Model.Images.Count</span></a>
    </div>
</form>